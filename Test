
void test_Color() {
    // test of default constructor 
    Color color;
    cout << "expected 0 0 0, actual: " << color << endl;
    // test of non-default constructor 
    Color color2(255, 26, 152);
    cout << "expected 255 26 152 actual: " << color2 << endl;
    // testing setRed, setBlue, & setGreen
    color.setRed(5);
    color.setBlue(6);
    color.setGreen(7);

    // test of member functions getRed, getBlue, getGreen
    cout << "expected: (5,6,7), actual: ";
    cout << "(" << color.getRed()
        << "," << color.getBlue()
        << "," << color.getGreen()
        << ")" << endl;
}

void test_Circle() {
    Point pt1(5, 25);
    Point pt2;
    cout <<"Expected: 0,0 5,25" << pt2 << " " << pt1;
    Color color1(245, 47, 23);
    Color color2;
    Circle Circle(pt2, 25, color2);
    Circle.setCenter(pt1);
    Circle.setColor(color1);
    Circle.setRadius(40);
    cout << "expected 5,25 40 245,47,23" << Circle.getCenter() << " " << Circle.getRadius() << " " << Circle.getColor();
}

void test_Line() {
    Point pt1;
    Point pt2(100, 100);
    Color color1;
    Line line(pt1, pt2, color1);
    Point pt3(50, 50);
    Point pt4(75, 75);
    Color color2(0,0,255);
    line.setStart(pt3);
    line.setEnd(pt4);
    line.setColor(color2);
    cout << "Expected: 50,50 75,75 0,0,255" << line.getStart() << " " << line.getEnd() << " " << line.getColor();
}


void test_Triangle() {
        Point pt1;
        Color color1;
        Color color2(255, 0, 0);
        Point pt2(50,0);
        Point pt3(0,50);
        Point pt4(75, 100);
        Point pt5(100, 75);
        Point pt6(75, 75);

        Triangle triangle(pt1, pt2, pt3, color1);
        triangle.setVertexOne(pt4);
        triangle.setVertexTwo(pt5);
        triangle.setVertexThree(pt6);
        triangle.setColor(color2);
        cout << "Expected: 75,100 100,75 75,75 255,0,0" << triangle.getVertexOne() << " " << triangle.getVertexTwo() <<
            " " << triangle.getVertexThree() << " " << triangle.getVertexOneColor(); 
}

void test_Rectangle() {
    Point p1;
    Point p1point2;
    Point p2(1, 1);
    Color c1(50, 50, 50);
    Color c2(100, 100, 100);
    Color c3(255, 255, 255);
    Color c4(0, 0, 0);

    Rectangle rec1(p1, p2, c1);
    ifstream input_file;
    input_file.open("rectangles.txt");
    rec1.read(input_file);
    cout << "recl is: " << rec1 << endl;

    Rectangle rec2;
    cout << "rec2 is: " << rec2 << endl;

    Rectangle rec3(p1, p2, c1);
    cout << "rec3 is: " << rec3 << endl;

    Rectangle rec4(p1, p2, c1, c2, c3, c4);
    cout << "rec4 is: " << rec4 << endl;

    Rectangle rec4points5(p1, p1, c1, c1, c1, c1);
    cout << "rec4.5 is: " << rec4points5 << endl;

    Rectangle rec5
        rec5.setColor(c4);

    Rectangle rec6;
    rec6.setStart(p1);
    cout << "rec6 start is: " << rec6.getStart() << endl;
    rec6.setEnd(p2);
    cout << "rec6 end is: " << rec6.getEnd() << endl;
}



